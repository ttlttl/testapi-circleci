
#!/bin/sh

# script/builds - builds the release

# exit on sub-module failure
set -e

cd "$(dirname "$0")/.."

# ------

echo "Publishing Docker Hub..."

docker build --rm=false  -t yuzukwok/testapi .
docker login -u $DOCKER_USER -p $DOCKER_PASSWORD -e $DOCKER_EMAIL
docker tag yuzukwok/testapi $DOCKER_USER/testapi:latest
docker push $DOCKER_USER/testapi

echo "Done publishing!"

# ------